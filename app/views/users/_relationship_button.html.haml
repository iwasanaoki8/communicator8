= turbo_frame_tag :relationship_button do
  - if user_signed_in?
    - unless current_user == @user
      - if current_user.following?(@user)
        = button_to "フォロー中", relationship_path(@user), method: :delete, class: 'btn zozo-button w-75'
      - else
        = button_to "フォロー", relationships_path(followed_id: @user.id), class: 'btn zozo-button w-75'
    -# 未ログイン事にお気に入りできないことを指すボタン
  - else
    = button_to "フォローする", relationships_path(followed_id: @user.id), class: 'btn zozo-button w-75'
