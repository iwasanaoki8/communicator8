.form-container.mb-4
  = simple_form_for resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}, html: { class: 'form-center' } do |f|
    %h2.form-title.mb-4 ログイン
    = f.input :email, autofocus: true, autocomplete: "email", required: false, input_html: { class: 'form-control stylish-input mb-2' }
    = f.input :password, autocomplete: "current-password", required: false, input_html: { class: 'form-control stylish-input mb-2' }

    - if devise_mapping.rememberable?
      .field.m-3.text-center
        = f.check_box :remember_me
        = f.label "次回から自動でログイン"
    .actions.d-flex.align-items-end.justify-content-between
      = render "users/shared/links"
      = f.button :submit, 'ログイン', class: 'btn btn-primary btn-block mt-4 zozo-button'
      
