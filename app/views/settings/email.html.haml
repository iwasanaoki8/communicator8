%main.container
  .profile-container
    .row.mt-4
      .col-md-8.mb-3.profile-editor
        = simple_form_for @user, url: setting_path, html: { class: 'form-setting ', multipart: true }, data: {turbo: false} do |f|
          = f.input :email, required: true, autofocus: true, input_html: { class: 'form-control stylish-input mb-5' }

          .text-center
            = f.button :submit, 'メールアドレスを変更する', class: 'btn zozo-button'
      .col-md-4.mb-3
        = render 'link_list'

