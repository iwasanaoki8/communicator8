%main.container
  .profile-container
    .row.mt-4
      .col-md-8.mb-3.profile-editor
        = simple_form_for @user, url: setting_path, html: { class: 'form-setting ', multipart: true } do |f|
          = f.input :password, autocomplete: "new-password", required: true, input_html: { class: 'form-control stylish-input mb-5' }
          - if @minimum_password_length
            %small
              .text-end
                = "※#{@minimum_password_length}文字以上"
          = f.input :password_confirmation, autocomplete: "new-password", required: true, input_html: { class: 'form-control stylish-input mb-5' }
          - if @minimum_password_length
            %small
              .text-end
                = "※#{@minimum_password_length}文字以上"
          .text-center
            = f.button :submit, 'パスワードを再設定する', class: 'btn zozo-button'
      .col-md-4.mb-3
        = render 'link_list'

